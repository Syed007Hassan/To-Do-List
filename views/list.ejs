<%- include('header'); -%>

    <div class="box" id="heading">
        <h1 class="headingday">
            <%=ListTitle%>
        </h1>
    </div>

    <div class="row d-flex justify-content-center align-items-center box shadow-lg">
        <!-- using for each loop to access the newListItems.name  -->
        <% newListItems.forEach(element=> { %>
            <div class="item">
                <input type="checkbox">
                <p class="listp">
                    <%=element.name%>
                </p>
            </div>
            <% }); %>

                <form class="item" method="post">

                    <input type="text" name="newItems" placeholder="New Item" autocomplete="off" autocapitalize="on">
                    <div class="buttoncontainer">
                        <button formaction="/" type="submit" name="list" value=<%=ListTitle%> >+</button>
                        <button formaction="/remove" type="submit" name="Removebutton" value=<%=ListTitle%> >-</button>
                    </div>
                </form>

    </div>

    <%- include('footer'); -%>